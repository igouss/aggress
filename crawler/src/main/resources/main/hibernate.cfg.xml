<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:postgresql://localhost:5432/aggress</property>
        <property name="use_sql_comments">true</property>
        <!--<mapping package="com.naxsoft.entity"/>-->
        <mapping class="com.naxsoft.entity.SourceEntity"/>
        <mapping class="com.naxsoft.entity.WebPageEntity"/>
        <mapping class="com.naxsoft.entity.ProductEntity"/>

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>